@model WebCRUD_PIM_VIII.Models.Pessoa

@{
    ViewData["Title"] = "Create";
}

<h1>Inserir</h1>

<h4>Pessoa</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-row">
                <div class="form-group col-md-8">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="CPF" class="control-label"></label>
                    <input asp-for="CPF" class="form-control" minlength="11" maxlength="11" required 
                        oninvalid="this.setCustomValidity('O CPF precisa ter 11 dígitos.')" onchange="try{setCustomValidity('')}catch(e){}"/>
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-8">
                    <label asp-for="Endereco.Logradouro" class="control-label"></label>
                    <input asp-for="Endereco.Logradouro" class="form-control" placeholder="Endereço" required/>
                    <span asp-validation-for="Endereco.Logradouro" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Endereco.Numero" class="control-label"></label>
                    <input asp-for="Endereco.Numero" class="form-control" />
                    <span asp-validation-for="Endereco.Numero" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-8">
                    <label asp-for="Endereco.Bairro" class="control-label"></label>
                    <input asp-for="Endereco.Bairro" class="form-control" required/>
                    <span asp-validation-for="Endereco.Bairro" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Endereco.Cep" class="control-label"></label>
                    <input asp-for="Endereco.Cep" class="form-control" />
                    <span asp-validation-for="Endereco.Cep" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-8">
                    <label asp-for="Endereco.Cidade" class="control-label"></label>
                    <input asp-for="Endereco.Cidade" class="form-control" required/>
                    <span asp-validation-for="Endereco.Cidade" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Endereco.Estado" class="control-label"></label>
                    <input asp-for="Endereco.Estado" class="form-control" required/>
                    <span asp-validation-for="Endereco.Estado" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-5">
                    <label asp-for="Telefones[0].Numero" class="control-label"></label>
                    <input asp-for="Telefones[0].Numero" class="form-control" placeholder="Telefone" minlength="8" required/>
                    <span asp-validation-for="Telefones[0].Numero" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Telefones[0].DDD" class="control-label"></label>
                    <input asp-for="Telefones[0].DDD" class="form-control" />
                    <span asp-validation-for="Telefones[0].DDD" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Telefones[0].TipoTelefone.Tipo" class="control-label"></label>
                    <input asp-for="Telefones[0].TipoTelefone.Tipo" class="form-control" placeholder="Fixo ou móvel ?" required/>
                    <span asp-validation-for="Telefones[0].TipoTelefone.Tipo" class="text-danger" placeholder="Fixo ou Móvel?"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-5">
                    <label asp-for="Telefones[1].Numero" class="control-label"></label>
                    <input asp-for="Telefones[1].Numero" class="form-control" placeholder="Telefone" minlength="8" required/>
                    <span asp-validation-for="Telefones[0].Numero" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Telefones[1].DDD" class="control-label"></label>
                    <input asp-for="Telefones[1].DDD" class="form-control" />
                    <span asp-validation-for="Telefones[0].DDD" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Telefones[1].TipoTelefone.Tipo" class="control-label"></label>
                    <input asp-for="Telefones[1].TipoTelefone.Tipo" class="form-control" placeholder="Fixo ou móvel ?" required/>
                    <span asp-validation-for="Telefones[1].TipoTelefone.Tipo" class="text-danger"></span>
                </div>
            </div>
 
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-success"/> | 
                <a asp-action="Index">Retornar para a lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
