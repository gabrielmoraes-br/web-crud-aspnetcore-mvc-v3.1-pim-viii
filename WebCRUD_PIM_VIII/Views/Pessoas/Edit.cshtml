@model WebCRUD_PIM_VIII.Models.Pessoa

@{
    ViewData["Title"] = "Editar";
}

<h1>@ViewData["Title"]</h1>

<h4>Pessoa</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- Hidden permite que todos estes ids não sejam perdidos durante a ação Editar -->
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Endereco.Id" />
            @for (int i = 0; i < Model.Telefones.Length; i++)
            {
            <input type="hidden" asp-for="Telefones[i].Id" />
            <input type="hidden" asp-for="Telefones[i].TipoTelefone.Id" />
            }

            <div class="form-row">
                <div class="form-group col-md-8">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="CPF" class="control-label"></label>
                    <input asp-for="CPF" class="form-control"/>
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-8">
                    <label asp-for="Endereco.Logradouro" class="control-label"></label>
                    <input asp-for="Endereco.Logradouro" class="form-control" placeholder="Endereço" required/>
                    <span asp-validation-for="Endereco.Logradouro" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Endereco.Numero" class="control-label"></label>
                    <input asp-for="Endereco.Numero" class="form-control" required/>
                    <span asp-validation-for="Endereco.Numero" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-8">
                    <label asp-for="Endereco.Bairro" class="control-label"></label>
                    <input asp-for="Endereco.Bairro" class="form-control" required/>
                    <span asp-validation-for="Endereco.Bairro" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Endereco.Cep" class="control-label"></label>
                    <input asp-for="Endereco.Cep" class="form-control" required/>
                    <span asp-validation-for="Endereco.Cep" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-8">
                    <label asp-for="Endereco.Cidade" class="control-label"></label>
                    <input asp-for="Endereco.Cidade" class="form-control" required/>
                    <span asp-validation-for="Endereco.Cidade" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Endereco.Estado" class="control-label"></label>
                    <input asp-for="Endereco.Estado" class="form-control" required/>
                    <span asp-validation-for="Endereco.Estado" class="text-danger"></span>
                </div>
            </div>

            @for (int i = 0; i < Model.Telefones.Length; i++)
            {
            <div class="form-row">
                <div class="form-group col-md-5">
                    <label asp-for="Telefones[i].Numero" class="control-label"></label>
                    <input asp-for="Telefones[i].Numero" class="form-control" placeholder="Telefone" minlength="8" required/>
                    <span asp-validation-for="Telefones[i].Numero" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Telefones[i].DDD" class="control-label"></label>
                    <input asp-for="Telefones[i].DDD" class="form-control" />
                    <span asp-validation-for="Telefones[i].DDD" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Telefones[i].TipoTelefone.Tipo" class="control-label"></label>
                    <input asp-for="Telefones[i].TipoTelefone.Tipo" class="form-control" placeholder="Fixo ou móvel ?" required/>
                    <span asp-validation-for="Telefones[i].TipoTelefone.Tipo" class="text-danger"></span>
                </div>
            </div>
            }
            
            <div class="form-group">
                <input type="submit" value="Salvar alterações" class="btn btn-primary" /> | 
                <a asp-action="Index">Retornar para a lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
